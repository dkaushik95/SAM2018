<div class="col-sm-10 mx-auto">
  <h1>Your Papers</h1>
  <div id="papers">
    <% if @papers.blank? %>
      <h2>You do not have any papers submitted! Lets change that!</h2>
    <% else %>
      <% @papers.each do |paper| %>
        <p class="title"><%= paper.title %></p>
        <p class="date"><%= time_ago_in_words(paper.created_at) %></p>
        <%= link_to "View" ,@paper %>
      <%end %>
    <% end %>
    <%= link_to "Add a paper", new_paper_path %>
  </div>
</div>


